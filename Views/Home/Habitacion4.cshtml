@{
    ViewData["Title"] = "Habitación 2";
    string nombreJugador = ViewBag.NombreJugador as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="Habitacion">
        <div class="habitacion-container">
            <h2>Enigma del Código IATA</h2>
            <p>@nombreJugador, Debes resolver este enigma para determinar el código IATA de un importante aeropuerto internacional. ¡Buena suerte!</p>
            
            <!-- Elementos Multimedia -->
            <div class="multimedia">
                <p>Pista:</p>
                <ul>
                    <li>El código IATA del aeropuerto es la combinación de la primera letra de la ciudad y las dos primeras letras del nombre del país. El nombre popular del aeropuerto es Charles de Gaulle... por si te sirve de algo.</li>
                </ul>
            </div>
            
            <!-- Formulario para descifrar la clave -->
            <form method="post" action="@Url.Action("Habitacion", "Home", new { sala = 4 })" autocomplete="off">
                <input type="text" name="clave" placeholder="Ingresa la combinacion final" required autocomplete="off">
                <button type="submit">VALIDAR</button>
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="error">
                    <p>@ViewBag.Error</p>
                </div>
            }

            <!-- Botones de pistas -->
            <div class="pistas">
                <button type="button" onclick="usarPista(4, 1)">Pista 1</button>
                <button type="button" onclick="usarPista(4, 2)">Pista 2</button>
                <button type="button" onclick="usarPista(4, 3)">Pista 3</button>
            </div>
        </div>
    </div>

    <script>
        function usarPista(sala, pista) {
            fetch(`@Url.Action("UsarPista", "Home")?sala=${sala}&pista=${pista}`, {
                method: 'POST'
            }).then(() => {
                if (pista === 1) {
                    alert('Pista 1: La primera letra del código es la inicial de la ciudad famosa por su Torre Eiffel.');
                } else if (pista === 2) {
                    alert('Las dos siguientes letras son las iniciales del país conocido por su gastronomía y arte.');
                } else {
                    alert('Combina la primera letra de la ciudad con las dos primeras letras del país.');
                }
            });
        }
    </script>
</body>
</html>
