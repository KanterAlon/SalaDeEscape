@{
    ViewData["Title"] = "Victoria";

    int intentosExtras = 0;
    if (ViewBag.IntentosExtras != null)
    {
        intentosExtras = (int)ViewBag.IntentosExtras;
    }

    int pistasUsadas = 0;
    if (ViewBag.PistasUsadas != null)
    {
        pistasUsadas = (int)ViewBag.PistasUsadas;
    }

    string nombreJugador = ViewBag.NombreJugador as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/victory.css" />
</head>
<body class="victory">
    <div class="victory-container">
        <h2>¡Felicidades, @nombreJugador !</h2>
        <p>¡Has resuelto todos los acertijos y asegurado el despegue del vuelo! ¡Buen trabajo, equipo!</p>
        <p>Intentos extras utilizados: @intentosExtras</p>
        <p>Pistas utilizadas: @pistasUsadas</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary-custom" onclick="resetTimer()">Volver al Inicio</a>
    </div>

    <script>
        function resetTimer() {
            localStorage.removeItem('timeLeft');
        }

        function createConfetti() {
            const confetti = document.createElement('div');
            confetti.classList.add('confetti');
            confetti.style.left = Math.random() * 100 + 'vw';
            confetti.style.animationDuration = Math.random() * 3 + 2 + 's';
            document.body.appendChild(confetti);

            setTimeout(() => {
                confetti.remove();
            }, 5000);
        }

        for (let i = 0; i < 100; i++) {
            createConfetti();
        }

        setInterval(createConfetti, 300);
    </script>
</body>
</html>
